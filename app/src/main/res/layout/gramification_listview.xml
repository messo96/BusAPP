<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

  <ImageView
      android:id="@+id/image_gramification"
      android:layout_width="100dp"
      android:layout_height="wrap_content"
      android:src="@mipmap/ic_gramification_1"
      />

  <TextView
      android:id="@+id/text_view_xp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom"
      android:fontFamily="@font/alegreya_sans_bold_italic"
      android:text="XP" />

  <androidx.appcompat.widget.LinearLayoutCompat
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

    <TextView
        android:id="@+id/text_view_gramification_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alegreya_sans_bold_italic"
        />

    <TextView
        android:id="@+id/text_view_gramification_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/alegreya_sans_bold_italic"
        android:gravity="center"
        />

  </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>